// #### FONTS #### //

@import url(http://fonts.googleapis.com/css?family=Open\+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,800,700);

$font-default = 'Open Sans';

// #### RESET #### //

@import 'normalize';

*,
*:before,
*:after {
	font-family: $font-default;
	box-sizing: border-box;
}

html,
body {
	float: left;
	width: 100%;
	height: 100%;
}

header,
section,
article,
nav,
footer {
	float: left;
	width: 100%;
}

// #### IMPORT #### //

$tablet = 768px;
$mobile = 480px;

@import 'mixins';

// #### SHARED #### //

.clear-fix {
	zoom: 1;
	&:before,
	&:after{
		content: "";
		display: table;
	}
	&:after{
		clear: both;
	}
}

.container {
	max-width: 1024px;
	width: 100%;
	margin: 0 auto;
	padding: 0 20px;
}